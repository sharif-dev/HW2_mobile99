<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="AlarmService">

        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/alarmEnabledKey"
            android:title="Alarm Enabled ?" />

        <com.saleh.hw2_mobile99.TimePreference
            app:dialogTitle=""
            app:title="Select Alarm Time"
            app:key="@string/alarmTimeKey"
            app:negativeButtonText="Cancel"
            app:positiveButtonText="Apply"/>


        <EditTextPreference
            android:defaultValue="10"
            android:key="@string/alarmGyroThreshold"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Gyro Threshold"
            android:summary="Edit Gyro Threshold Here"/>


    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="@string/sync_title" />

        <SwitchPreferenceCompat
            app:dependency="sync"
            app:key="attachment"
            app:summaryOff="@string/attachment_summary_off"
            app:summaryOn="@string/attachment_summary_on"
            app:title="@string/attachment_title" />

    </PreferenceCategory>

</PreferenceScreen>